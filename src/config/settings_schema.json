  {
    "name": "Logo Images",
    "settings": [
      {
        "type": "image_picker",
        "id": "main_logo",
        "label": "Select main logo"
      },
      {
        "type": "image_picker",
        "id": "main_logo_light",
        "label": "Select logo for dark backgrounds"
